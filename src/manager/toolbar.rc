#include "resource.h"
#include "version.h"
#include <winver.h>

// Application icon
IDI_APP_ICON ICON "resources/app.ico"

// Toolbar icons (24x24 BMP, 24-bit color recommended)
// Place your .bmp files in src/manager/resources/
IDB_TOOLBAR_NEW_VM    BITMAP "resources/new_vm.bmp"
IDB_TOOLBAR_EDIT      BITMAP "resources/edit.bmp"
IDB_TOOLBAR_DELETE    BITMAP "resources/delete.bmp"
IDB_TOOLBAR_START     BITMAP "resources/start.bmp"
IDB_TOOLBAR_STOP      BITMAP "resources/stop.bmp"
IDB_TOOLBAR_REBOOT    BITMAP "resources/reboot.bmp"
IDB_TOOLBAR_SHUTDOWN  BITMAP "resources/shutdown.bmp"

// Version information
VS_VERSION_INFO VERSIONINFO
FILEVERSION    TENBOX_VERSION_RC
PRODUCTVERSION TENBOX_VERSION_RC
FILEFLAGSMASK  VS_FFI_FILEFLAGSMASK
#ifdef _DEBUG
FILEFLAGS      VS_FF_DEBUG
#else
FILEFLAGS      0
#endif
FILEOS         VOS_NT_WINDOWS32
FILETYPE       VFT_APP
FILESUBTYPE    VFT2_UNKNOWN
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904B0"
        BEGIN
            VALUE "CompanyName",      TENBOX_COMPANY_NAME
            VALUE "FileDescription",  TENBOX_FILE_DESCRIPTION
            VALUE "FileVersion",      TENBOX_VERSION_STR
            VALUE "InternalName",     "tenbox-manager"
            VALUE "LegalCopyright",   TENBOX_COPYRIGHT
            VALUE "OriginalFilename", "tenbox-manager.exe"
            VALUE "ProductName",      TENBOX_PRODUCT_NAME
            VALUE "ProductVersion",   TENBOX_VERSION_STR
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0409, 1200
    END
END
